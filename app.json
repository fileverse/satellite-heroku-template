{
  "name": "Fileverse API",
  "description": "Fileverse API Template",
  "repository": "https://github.com/fileverse/api-heroku-template",
  "keywords": ["node", "express"],
  "addons": ["heroku-postgresql:essential-0"],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "API_KEY": {
      "description": "API key for storage server authentication",
      "required": true
    },
    "RPC_URL": {
      "description": "Ethereum RPC endpoint",
      "value": "https://rpc.sepolia.org"
    },
    "INLINE_WORKER": {
      "description": "Run worker in the same process as the server",
      "value": "true"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
